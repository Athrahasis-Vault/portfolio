---
import { Image } from "astro:assets";
import AstroIcon from "@public/Icons/astro-badge.svg";
---

<header class="header">
  <nav aria-label="Global" class="nav-container">
    <div class="logo-wrapper">
      <a href="/#home" aria-label="Home" class="logo-link">
        <Image src={AstroIcon} alt="Astro Icon" class="logo-image" loading="eager" />
      </a>
    </div>
    <button 
      type="button" 
      id="mobile-menu-button"
      class="mobile-menu-button"
      aria-label="Open menu"
    >
      <span class="sr-only">Open main menu</span>
      <svg class="menu-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
        <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
      </svg>
    </button>
    <div class="desktop-menu">
      <a href="/#home" class="nav-link">Inicio</a>
      <a href="/#projects" class="nav-link">Proyectos</a>
      <a href="/about" class="nav-link">Sobre mí</a>
      <a href="/contact" class="nav-link">Contacto</a>
    </div>
  </nav>
  <div id="mobile-menu" class="mobile-menu hidden">
    <div class="mobile-menu-overlay"></div>
    <div class="mobile-menu-panel">
      <div class="mobile-menu-header">
        <a href="/#home" aria-label="Home" class="logo-link">
          <span class="sr-only">Emanuel Dev</span>
          <Image src={AstroIcon} alt="Astro Icon" class="logo-image" loading="eager" />
        </a>
        <button 
          type="button" 
          id="mobile-menu-close"
          class="mobile-close-button"
          aria-label="Close menu"
        >
          <span class="sr-only">Close menu</span>
          <svg class="close-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" aria-hidden="true">
            <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </button>
      </div>
      <nav class="mobile-nav">
        <a href="/#home" class="mobile-nav-link">Inicio</a>
        <a href="/#projects" class="mobile-nav-link">Proyectos</a>
        <a href="/about" class="mobile-nav-link">Sobre mí</a>
        <a href="/contact" class="mobile-nav-link">Contacto</a>
      </nav>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    background-color: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: background-color 0.3s ease, border-color 0.3s ease;
  }

  :global(body.light-theme) .header {
    background-color: rgba(248, 250, 252, 0.8);
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    max-width: 80rem;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .nav-container {
      padding: 1.5rem 2rem;
    }
  }

  .logo-wrapper {
    flex: 1;
  }

  .logo-link {
    display: inline-flex;
    padding: 0.375rem;
    margin: -0.375rem;
    transition: opacity 0.3s ease;
  }

  .logo-link:hover {
    opacity: 0.8;
  }

  .logo-image {
    height: 2rem;
    width: auto;
  }

  .desktop-menu {
    display: none;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .desktop-menu {
      display: flex;
    }
  }

  .nav-link {
    font-size: 0.875rem;
    line-height: 1.5rem;
    font-weight: 600;
    color: #f1f5f9;
    text-decoration: none;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -0.25rem;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(to right, #c084fc, #60a5fa);
    transition: width 0.3s ease;
  }

  .nav-link:hover {
    color: #c084fc;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  :global(body.light-theme) .nav-link {
    color: #0f172a;
  }

  :global(body.light-theme) .nav-link:hover {
    color: #7e22ce;
  }

  .mobile-menu-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem;
    margin: -0.625rem;
    border-radius: 0.375rem;
    color: #e5e7eb;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .mobile-menu-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  :global(body.light-theme) .mobile-menu-button {
    color: #0f172a;
  }

  :global(body.light-theme) .mobile-menu-button:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  @media (min-width: 1024px) {
    .mobile-menu-button {
      display: none;
    }
  }

  .menu-icon,
  .close-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .mobile-menu {
    position: fixed;
    inset: 0;
    z-index: 100;
    transition: opacity 0.3s ease;
  }

  .mobile-menu.hidden {
    display: none;
  }

  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }

  .mobile-menu-overlay {
    position: fixed;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .mobile-menu-panel {
    position: fixed;
    inset-y: 0;
    right: 0;
    z-index: 101;
    width: 100%;
    max-width: 20rem;
    overflow-y: auto;
    background-color: #0f172a;
    padding: 1.5rem;
    box-shadow: -4px 0 6px -1px rgba(0, 0, 0, 0.1);
  }

  :global(body.light-theme) .mobile-menu-panel {
    background-color: #ffffff;
  }

  .mobile-menu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .mobile-close-button {
    padding: 0.625rem;
    margin: -0.625rem;
    border-radius: 0.375rem;
    color: #e5e7eb;
    background: transparent;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .mobile-close-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  :global(body.light-theme) .mobile-close-button {
    color: #0f172a;
  }

  :global(body.light-theme) .mobile-close-button:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  :global(body.light-theme) .mobile-nav {
    border-top-color: rgba(0, 0, 0, 0.1);
  }

  .mobile-nav-link {
    display: block;
    padding: 0.5rem 0.75rem;
    margin: 0 -0.75rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    line-height: 1.75rem;
    font-weight: 600;
    color: #f1f5f9;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .mobile-nav-link:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }

  :global(body.light-theme) .mobile-nav-link {
    color: #0f172a;
  }

  :global(body.light-theme) .mobile-nav-link:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
</style>

<script>
  const initMobileMenu = () => {
    const menuButton = document.getElementById('mobile-menu-button');
    const closeButton = document.getElementById('mobile-menu-close');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-nav-link');

    const openMenu = () => {
      mobileMenu?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    };

    const closeMenu = () => {
      mobileMenu?.classList.add('hidden');
      document.body.style.overflow = '';
    };

    menuButton?.addEventListener('click', openMenu);
    closeButton?.addEventListener('click', closeMenu);
    
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    mobileMenu?.querySelector('.mobile-menu-overlay')?.addEventListener('click', closeMenu);
  };

  document.addEventListener('astro:page-load', initMobileMenu);
</script>