---
// Hero data
const name = "Emanuel Montes Cornejo";
const greeting = "Hola, mi nombre es";
const subheading = "Un gusto conocerte. ðŸ‘‹";
const ctaButtons = [
  {
    text: "Ver Proyectos",
    href: "/#projects",
    primary: true,
    ariaLabel: "Ver mis proyectos"
  },
  {
    text: "Sobre MÃ­",
    href: "/about",
    primary: false,
    ariaLabel: "Saber mÃ¡s sobre mÃ­"
  }
];
---

<div class="hero-content">
  <div class="hero-text">
    <h1 class="hero-title">
      {greeting} <span class="hero-name">{name}</span>
    </h1>
    <p class="hero-subtitle">{subheading}</p>
    
    <div class="hero-actions">
      {ctaButtons.map(button => (
        <a 
          href={button.href} 
          class:list={['hero-button', { 'hero-button-primary': button.primary, 'hero-button-secondary': !button.primary }]}
          aria-label={button.ariaLabel}
        >
          {button.text}
          {!button.primary && <span class="button-arrow">â†’</span>}
        </a>
      ))}
    </div>
  </div>
</div>

<style>
  .hero-content {
    width: 100%;
    max-width: 64rem;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 10;
  }

  .hero-text {
    text-align: center;
    animation: fadeInUp 1s ease-out forwards;
    opacity: 0;
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3.75rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: #f1f5f9;
  }

  :global(body.light-theme) .hero-title {
    color: #0f172a;
  }

  .hero-name {
    background: linear-gradient(135deg, #c084fc 0%, #60a5fa 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: inline-block;
    animation: shimmer 3s ease-in-out infinite;
  }

  .hero-subtitle {
    font-size: clamp(1.25rem, 3vw, 1.875rem);
    margin-bottom: 2rem;
    color: #cbd5e1;
  }

  :global(body.light-theme) .hero-subtitle {
    color: #475569;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  @media (min-width: 640px) {
    .hero-actions {
      flex-direction: row;
    }
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    border-radius: 9999px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .hero-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .hero-button:hover::before {
    width: 300px;
    height: 300px;
  }

  .hero-button > * {
    position: relative;
    z-index: 1;
  }

  .hero-button-primary {
    background: linear-gradient(135deg, #c084fc 0%, #60a5fa 100%);
    color: white;
    box-shadow: 0 4px 14px 0 rgba(192, 132, 252, 0.4);
  }

  .hero-button-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px 0 rgba(192, 132, 252, 0.6);
  }

  .hero-button-primary:active {
    transform: translateY(0);
  }

  .hero-button-secondary {
    background: transparent;
    color: #f1f5f9;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(8px);
  }

  .hero-button-secondary:hover {
    border-color: #c084fc;
    color: #c084fc;
    transform: translateY(-2px);
  }

  :global(body.light-theme) .hero-button-secondary {
    color: #0f172a;
    border-color: rgba(0, 0, 0, 0.2);
  }

  :global(body.light-theme) .hero-button-secondary:hover {
    border-color: #7e22ce;
    color: #7e22ce;
  }

  .button-arrow {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .hero-button-secondary:hover .button-arrow {
    transform: translateX(4px);
  }

  :global(body.light-theme) .decoration-circle {
    opacity: 0.05;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes shimmer {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .hero-content {
    will-change: opacity;
  }

  .hero-button {
    will-change: transform;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-text,
    .hero-name,
    .decoration-circle,
    .hero-button,
    .button-arrow {
      animation: none !important;
      transition: none !important;
    }
  }

  @media (max-width: 640px) {
    .hero-actions {
      padding: 0 1rem;
    }

    .hero-button {
      width: 100%;
    }
  }
</style>